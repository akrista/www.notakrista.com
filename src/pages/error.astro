---
import Contact from "../components/Contact.astro";
import ErrorPage from "../components/ErrorPage.astro";
import Profile from "../components/Profile.astro";
import Layout from "../layouts/Layout.astro";

// SEO específico para la página de error genérica
const seoTitle = "Error | www.notakrista.com";
const seoDescription =
	"Ha ocurrido un error. Por favor, inténtalo de nuevo o contacta con el administrador.";
---

<Layout>
    <!-- Start: Main Wrapper -->
    <main
        class="flex flex-col md:flex-row w-full max-w-full md:max-w-7xl border border-surface rounded-2xl overflow-hidden shadow-2xl relative bg-background mb-12 md:mb-4"
    >
        <!-- Start: Left / upper card -->
        <div
            class="p-8 md:p-6 flex flex-col justify-between w-full md:w-2/5 border-b md:border-b-0 md:border-r border-surface"
        >
            <Profile />
            <Contact />
        </div>
        <!-- End: Left / upper card -->

        <!-- Start: Right / lower card (error content) -->
        <div class="w-full md:w-4/5 p-0">
            <div class="min-h-full h-[90vh] flex flex-col">
                <ErrorPage
                    errorCode="error"
                    title="Algo ha salido mal"
                    description="Ha ocurrido un error inesperado. Por favor, inténtalo de nuevo en unos momentos o ponte en contacto conmigo si el problema persiste."
                    iconEmoji="⚠️"
                    iconColor="yellow-500"
                    showReloadButton={true}
                />
            </div>
        </div>
        <!-- End: Right / lower card -->
    </main>
    <!-- End: Main Wrapper -->

    <!-- Credits -->
    <div
        class="fixed md:absolute bottom-0 left-0 right-0 w-full text-center bg-background py-2"
    >
        Built with <a
            href="https://astro.build"
            title="Astro"
            target="_blank"
            class="text-primary hover:underline">Astro</a
        > by
        <a
            href="https://github.com/akrista"
            target="_blank"
            title="akrista"
            class="text-primary hover:underline">akrista</a
        >
        based on
        <a
            href="https://devidev.io/"
            target="_blank"
            title="devi|dev|io"
            class="text-primary hover:underline">devi|dev|io</a
        > astro theme
    </div>
</Layout>
