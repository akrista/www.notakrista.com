---
import SocialIcon from "./SocialIcon.astro";

interface Social {
	icon: "github" | "linkedIn" | "email";
	link: string;
	title?: string;
}

const socials: Social[] = [
	{
		icon: "github",
		link: "https://github.com/akrista",
		title: "View GitHub Profile",
	},

	{
		icon: "linkedIn",
		link: "https://www.linkedin.com/in/akrista",
		title: "View LinkedIn Profile",
	},
	{
		icon: "email",
		link: "mailto:info@notakrista.com",
		title: "Send Email",
	},
];
---

<!-- Start: Social Links -->
<div class="flex flex-wrap gap-3 mt-6 justify-between">
    {
        socials.map((social) => (
            <a
                href={social.link}
                target="_blank"
                title={social.title}
                rel="noopener noreferrer"
                class="flex items-center justify-center w-10 h-10 rounded-lg bg-background text-text transition-all duration-150 border border-surface hover:bg-primary hover:text-background hover:-translate-y-0.5"
            >
                <SocialIcon icon={social.icon} />
            </a>
        ))
    }
</div>
<!-- End: Social Links -->
