<div id="privacy-banner" class="privacy-banner hidden">
    <div
        class="fixed bottom-0 left-0 right-0 z-50 bg-background border-t border-surface shadow-2xl"
    >
        <div class="max-w-7xl mx-auto p-4">
            <div
                class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4"
            >
                <div class="flex-1">
                    <p class="text-sm text-text">
                        <span class="font-semibold text-primary"
                            >ðŸ”’ Privacy Notice:</span
                        >
                        This site uses <strong>Google Analytics</strong> and <strong
                            >Microsoft Clarity</strong
                        > to improve user experience and analyze traffic.
                        <a
                            href="https://policies.google.com/privacy"
                            target="_blank"
                            class="text-accent hover:text-primary underline"
                            >Google Privacy</a
                        > |
                        <a
                            href="https://privacy.microsoft.com/privacystatement"
                            target="_blank"
                            class="text-accent hover:text-primary underline"
                            >Microsoft Privacy</a
                        >
                    </p>
                </div>

                <div class="flex gap-3 flex-shrink-0">
                    <button
                        id="privacy-accept"
                        class="px-4 py-2 bg-primary text-background font-semibold rounded-lg hover:bg-secondary transition-colors duration-200 text-sm"
                    >
                        âœ“ Accept
                    </button>
                    <button
                        id="privacy-close"
                        class="px-4 py-2 border border-surface text-muted hover:text-text hover:border-primary transition-colors duration-200 rounded-lg text-sm"
                    >
                        Dismiss
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Check if user has already responded to privacy banner
    const privacyAccepted = localStorage.getItem("privacy-accepted");
    const privacyBanner = document.getElementById("privacy-banner");

    // Show banner if user hasn't responded
    if (!privacyAccepted && privacyBanner) {
        privacyBanner.classList.remove("hidden");
    }

    // Handle accept button
    const acceptButton = document.getElementById("privacy-accept");
    if (acceptButton) {
        acceptButton.addEventListener("click", () => {
            localStorage.setItem("privacy-accepted", "true");
            privacyBanner?.classList.add("hidden");

            // Optional: Initialize analytics here if you want to load them only after consent
            console.log("Privacy accepted - Analytics active");
        });
    }

    // Handle dismiss button
    const closeButton = document.getElementById("privacy-close");
    if (closeButton) {
        closeButton.addEventListener("click", () => {
            localStorage.setItem("privacy-accepted", "dismissed");
            privacyBanner?.classList.add("hidden");
        });
    }
</script>

<style>
    .privacy-banner {
        animation: slideUp 0.3s ease-out;
    }

    @keyframes slideUp {
        from {
            transform: translateY(100%);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>
